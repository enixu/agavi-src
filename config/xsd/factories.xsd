		        </xs:complexType>
		      </xs:element>
		      <xs:element name="response" minOccurs="0">
		        <xs:complexType>
		          <xs:sequence>
		            <xs:element name="parameters" type="parameters" minOccurs="0" />
		          </xs:sequence>
		          <xs:attribute name="class" type="xs:string" use="required" />
		        </xs:complexType>
		      </xs:element>
		      <xs:element name="routing" minOccurs="0">
		        <xs:complexType>
		          <xs:sequence>
		            <xs:element name="parameters" type="parameters" minOccurs="0" />
		          </xs:sequence>
		          <xs:attribute name="class" type="xs:string" use="required" />
		        </xs:complexType>
		      </xs:element>
		      <xs:element name="security_filter" minOccurs="0">
