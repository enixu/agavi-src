		      <xs:element name="storage" minOccurs="0">
		        <xs:complexType>
		          <xs:sequence>
		            <xs:element name="parameters" type="parameters" minOccurs="0" />
		          </xs:sequence>
		          <xs:attribute name="class" type="xs:string" use="required" />
		        </xs:complexType>
		      </xs:element>
		      <xs:element name="user" minOccurs="0">
		        <xs:complexType>
		          <xs:sequence>
		            <xs:element name="parameters" type="parameters" minOccurs="0" />
		          </xs:sequence>
		          <xs:attribute name="class" type="xs:string" use="required" />
		        </xs:complexType>
		      </xs:element>
		      <xs:element name="validator_manager" minOccurs="0">
