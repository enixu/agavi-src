		            <xs:element name="parameters" type="parameters" minOccurs="0" />
		          </xs:sequence>
		          <xs:attribute name="class" type="xs:string" use="required" />
		        </xs:complexType>
		      </xs:element>
		      <xs:element name="execution_filter" minOccurs="0">
		        <xs:complexType>
		          <xs:sequence>
		            <xs:element name="parameters" type="parameters" minOccurs="0" />
		          </xs:sequence>
		          <xs:attribute name="class" type="xs:string" use="required" />
		        </xs:complexType>
		      </xs:element>
		      <xs:element name="filter_chain" minOccurs="0">
		        <xs:complexType>
		          <xs:sequence>
		            <xs:element name="parameters" type="parameters" minOccurs="0" />
		          </xs:sequence>
		          <xs:attribute name="class" type="xs:string" use="required" />
		        </xs:complexType>
		      </xs:element>
		      <xs:element name="logger_manager" minOccurs="0">
